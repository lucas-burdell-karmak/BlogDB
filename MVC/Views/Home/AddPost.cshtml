@model BlogDB.Core.Post
<h2>Add New Post</h2>
@using (Html.BeginForm("AddPostResult","Home",FormMethod.Post,new {@class= "form-horizontal"}))
{
    <div class="row">
        <div class="input-group col-md-12">
            
            <div class="form-group">
                <label for="titletext" class="control-label">Test:</label>
                @Html.TextBoxFor(m => m.Title, new {@class="form-control", id="titletext"})
            </div>

            <div class="form-group">
                <label for="authortext" class="control-label">Author:</label>
                @Html.TextBoxFor(m => m.Author, new {@class="form-control", id="authortext"})
            </div>
            
            <div class="form-group">
                <label for="bodytext" class="control-label">Body:</label>
                @Html.TextAreaFor(m => m.Body, new {@class="form-control", id="bodytext", rows="5"})
            </div>

            <div>
                <input type="submit" class="btn btn-success box-shadow-4dp" value="Add Post" />
                @await Html.PartialAsync("BackButton")
            </div>
            
        </div>
    </div>

}

